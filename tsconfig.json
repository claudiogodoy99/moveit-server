{
  "compilerOptions": {
    "target": "es2017" ,//só para node projects
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist", //destino da transpilação de ts em js
    "rootDir": "./src", //destino da pasta raiz que contem o arquivo ts
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["./src/data/*"]
    }
  },
  "include": [
    "src/**/*"
  ] 
}
